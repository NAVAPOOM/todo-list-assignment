<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Actions -->
    <record id="action_todo_list_all" model="ir.actions.act_window">
        <field name="name">All Todo Lists</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Todo List!
            </p>
            <p>
                Click the "Create" button to start managing your tasks and projects.
            </p>
        </field>
    </record>
    
    <record id="action_todo_list_uncomplete" model="ir.actions.act_window">
        <field name="name">Uncomplete Todo Lists</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('status', '!=', 'complete')]</field>
        <field name="context">{'search_default_uncomplete': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No uncomplete todo lists found!
            </p>
            <p>
                All your todo lists are completed. Create a new one to get started.
            </p>
        </field>
    </record>
    
    <record id="action_todo_list_complete" model="ir.actions.act_window">
        <field name="name">Complete Todo Lists</field>
        <field name="res_model">todo.list</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('status', '=', 'complete')]</field>
        <field name="context">{'search_default_complete': 1, 'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No completed todo lists yet!
            </p>
            <p>
                Complete some todo lists to see them here.
            </p>
        </field>
    </record>
    
    <record id="action_todo_task_all" model="ir.actions.act_window">
        <field name="name">All Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <record id="action_todo_tag_all" model="ir.actions.act_window">
        <field name="name">Todo Tags</field>
        <field name="res_model">todo.tag</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Main Menu -->
    <menuitem id="menu_todo_main" 
              name="Todo Lists" 
              sequence="10" 
              web_icon="todo_list,static/description/icon.png"/>
    
    <!-- Sub Menus -->
    <menuitem id="menu_todo_all" 
              name="All" 
              parent="menu_todo_main" 
              action="action_todo_list_all" 
              sequence="10"/>
              
    <menuitem id="menu_todo_uncomplete" 
              name="Uncomplete" 
              parent="menu_todo_main" 
              action="action_todo_list_uncomplete" 
              sequence="20"/>
              
    <menuitem id="menu_todo_complete" 
              name="Complete" 
              parent="menu_todo_main" 
              action="action_todo_list_complete" 
              sequence="30"/>
    
    <!-- Configuration Menu -->
    <menuitem id="menu_todo_config" 
              name="Configuration" 
              parent="menu_todo_main" 
              sequence="100"/>
              
    <menuitem id="menu_todo_tags" 
              name="Tags" 
              parent="menu_todo_config" 
              action="action_todo_tag_all" 
              sequence="10"/>
    
</odoo>
